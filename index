            <div class="results-value" id="resultPeriod">—</div>
          </div>
        </div>
        <p class="results-note">
          Please arrive exactly at this period at the college sports field.
          If you come before or after this time, you will not be able to collect your items.
        </p>

        <div class="robe-card" id="robeCard" style="display:none;">
          <div class="robe-card-title">Robe Pickup Information</div>
          <p>
            Our records show that you have also requested a <strong>graduation robe</strong>.<br/>
            Please collect your robe from the <strong>Student Affairs Office</strong>.
            Staff members will be there to assist you with your robe and answer any questions.
          </p>
        </div>
      </div>
    </section>

    <!-- Quotes / Uplifting phrase -->
    <section class="quotes" aria-label="Graduation message">
      <article class="quote-card">
        <div class="quote-text">
          Every step brought you here. Every detail celebrates your journey.
        </div>
      </article>
    </section>
  </main>

  <footer>
    <span class="footer-credit">PROGRAMMED BY ALBARA.</span>
  </footer>

  <script>
    // --------- Config: Excel file names and column headers ----------
    const JACKETS_FILE = "Order_Arrangement_UPDATED.xlsx";
    const ROBES_FILE = "All_graduation_Orders_sorted_by_size.xlsx";

    // We read the FIRST row as headers (no skipping).
    const JACKETS_STUDENT_ID_COL = "Student ID ( 8 digits e.g.20200456)";
    const JACKETS_STATION_COL = "Station "; // note the space in the header
    const JACKETS_PERIOD_COL = "Period";

    const ROBES_STUDENT_ID_COL = "Student ID";

    let jacketData = []; // { id, station, period }
    let robeIdSet = new Set();
    let dataLoaded = false;
    let dataLoadFailed = false;

    const resultsEl = document.getElementById("results");
    const sectionEl = document.getElementById("resultSection");
    const periodEl = document.getElementById("resultPeriod");
    const sectionBadgeEl = document.getElementById("sectionBadge");
    const robeCardEl = document.getElementById("robeCard");
    const errorEl = document.getElementById("errorText");
    const loadingTextEl = document.getElementById("loadingText");
    const submitButton = document.getElementById("submitButton");

    const modalBackdrop = document.getElementById("guidelinesModal");
    const modalConfirm = document.getElementById("guidelinesConfirm");
    const modalCheck = document.getElementById("guidelinesCheck");

    const lookupCard = document.getElementById("lookupCard");
    const floatingOrb = document.getElementById("floatingOrb");
    const popoverHint = document.getElementById("popoverHint");

    // Pending result until popup is confirmed
    let pendingResult = null;
    let pendingHasRobe = false;

    function normalizeId(raw) {
      if (raw === null || raw === undefined) return "";
      let str = String(raw).trim();
      if (str.includes(".")) {
        str = str.split(".")[0];
      }
      str = str.replace(/\D/g, "");
      if (str.length > 8) {
        str = str.slice(-8);
      }
      return str;
    }

    async function loadExcelData() {
      loadingTextEl.style.display = "flex";
      submitButton.disabled = true;

      try {
        const [jacketsResp, robesResp] = await Promise.all([
          fetch(JACKETS_FILE),
          fetch(ROBES_FILE)
        ]);

        if (!jacketsResp.ok || !robesResp.ok) {
          throw new Error("Could not fetch Excel files.");
        }

        const jacketsArrayBuffer = await jacketsResp.arrayBuffer();
        const robesArrayBuffer = await robesResp.arrayBuffer();

        const jacketsWorkbook = XLSX.read(jacketsArrayBuffer, { type: "array" });
        const robesWorkbook = XLSX.read(robesArrayBuffer, { type: "array" });

        const jacketsSheet = jacketsWorkbook.Sheets[jacketsWorkbook.SheetNames[0]];
        const robesSheet = robesWorkbook.Sheets[robesWorkbook.SheetNames[0]];

        const jacketsRows = XLSX.utils.sheet_to_json(jacketsSheet, {
          defval: "",
          raw: true
        });

        const robesRows = XLSX.utils.sheet_to_json(robesSheet, {
          defval: "",
          raw: true
        });

        jacketData = jacketsRows
          .map((row) => {
            const rawId = row[JACKETS_STUDENT_ID_COL];
            const id = normalizeId(rawId);
            if (!id) return null;
            const station = (row[JACKETS_STATION_COL] || "").toString().trim();
            const period = (row[JACKETS_PERIOD_COL] || "").toString().trim();
            return { id, station, period };
          })
          .filter((x) => x !== null);

        robesRows.forEach((row) => {
          const rawId = row[ROBES_STUDENT_ID_COL];
          const id = normalizeId(rawId);
          if (id) {
            robeIdSet.add(id);
          }
        });

        dataLoaded = true;
        dataLoadFailed = false;
      } catch (err) {
        console.error("Error loading Excel data:", err);
        dataLoaded = false;
        dataLoadFailed = true;
        errorEl.textContent =
          "We could not load the collection data. Please contact the Graduation Team.";
      } finally {
        loadingTextEl.style.display = "none";
        submitButton.disabled = false;
      }
    }

    function showGuidelinesModal() {
      modalBackdrop.classList.add("visible");
      modalCheck.checked = false;
      modalConfirm.disabled = true;
    }

    function hideGuidelinesModal() {
      modalBackdrop.classList.remove("visible");
    }

    function handleLookup(event) {
      event.preventDefault();
      errorEl.textContent = "";
      robeCardEl.style.display = "none";
      resultsEl.style.display = "none";
      pendingResult = null;
      pendingHasRobe = false;

      const input = document.getElementById("studentId");
      const rawInput = input.value;
      const id = normalizeId(rawInput);

      if (!dataLoaded && !dataLoadFailed) {
        errorEl.textContent =
          "The collection data is still loading. Please wait a moment and try again.";
        return;
      }

      if (dataLoadFailed) {
        errorEl.textContent =
          "The collection data is not available. Please contact the Graduation Team.";
        return;
      }

      if (!id || id.length < 4) {
        errorEl.textContent = "Please enter a valid student ID.";
        return;
      }

      const match = jacketData.find((row) => row.id === id);

      if (!match) {
        errorEl.textContent =
          "We could not find this student ID. Please check the number and try again.";
        return;
      }

      pendingResult = {
        station: match.station || "N/A",
        period: match.period || "N/A",
        id
      };
      pendingHasRobe = robeIdSet.has(id);

      showGuidelinesModal();
    }

    // Enable/disable modal button based on checkbox
    modalCheck.addEventListener("change", () => {
      modalConfirm.disabled = !modalCheck.checked;
    });

    modalConfirm.addEventListener("click", () => {
      hideGuidelinesModal();
      if (!pendingResult) return;

      // Fill results
      sectionEl.textContent = pendingResult.station;
      periodEl.textContent = pendingResult.period;
      sectionBadgeEl.textContent = pendingResult.station || "Section";
      resultsEl.style.display = "block";

      if (pendingHasRobe) {
        robeCardEl.style.display = "block";
      } else {
        robeCardEl.style.display = "none";
      }

      // Glow around card
      lookupCard.classList.add("result-glow");
      setTimeout(() => {
        lookupCard.classList.remove("result-glow");
      }, 1800);

      // Boost background orb movement briefly
      if (floatingOrb) {
        floatingOrb.classList.add("orb-active");
        setTimeout(() => {
          floatingOrb.classList.remove("orb-active");
        }, 2500);
      }

      // Show small popover hint briefly
      if (popoverHint) {
        popoverHint.classList.add("visible");
        setTimeout(() => {
          popoverHint.classList.remove("visible");
        }, 3200);
      }

      pendingResult = null;
      pendingHasRobe = false;
    });

    document.addEventListener("DOMContentLoaded", () => {
      loadExcelData();

      const form = document.getElementById("idForm");
      form.addEventListener("submit", handleLookup);
    });
  </script>
</body>
</html>
